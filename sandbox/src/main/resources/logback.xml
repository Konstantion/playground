<configuration>
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS(zzz)} %p [%t] %c -- %m%n</pattern>
        </encoder>
    </appender>

    <root level="ALL">
        <appender-ref ref="ConsoleAppender"/>
    </root>
</configuration>